{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-9">

                {% for produit in produit %}
                    <div class="card" style="width: 18rem;">
                        <img src="{{ asset('upload/images/' ~ produit.photo)}}" class="card-img-top" alt="{{produit.nom}}">
                        <div class="card-body">
                            <h5 class="card-title">{{produit.nom}}</h5>
                            {{ "Prix" }} : {{ produit.prix }} €

                            {{ "Quantité" }} : {{ produit.quantite }}
                            <a href="{{path('produitSingle', {id: produit.id})}}"><button class="btn btn-primary">Voir le produit</button></a>
                        </div>
                    </div>
                {% endfor %}
            </div>

        </div>
        <div class="col-3">
            {{form_start(formProduit)}}

            {{form_rest(formProduit)}}
            {{form_end(formProduit)}}
        </div>
    </div>
{% endblock %}